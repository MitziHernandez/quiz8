#include <iostream>
using namespace std;
int triangle (int numero)
{

  for (int i=0;i<numero ; i++)
  {

    for(int j=0; j<i; j++)
    {
      cout << "T ";
    }
    cout << "\n";
  }

  for(int i=numero;i>0;--i)
  {
    for(int j=0;j<i;++j)
    {
      cout<<"T ";
    }
    cout<<"\n";
  }
  return 0;
}
int main ()
{
  int piramide, numero;
  cout << "Ingrese las lineas que quiere para formar el triangulo " << endl;
  cin >> numero;

  triangle (numero);
  return 0;
}
